<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ESTADO PRESIONADO: Cuando el usuario está tocando el botón -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Usamos un color de fondo grisáceo semitransparente para el efecto de presión -->
            <solid android:color="#33FFFFFF" />
            <!-- Mantenemos el borde blanco -->
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <!-- Mismas esquinas redondeadas -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- ESTADO NORMAL: El aspecto por defecto del botón -->
    <item>
        <shape android:shape="rectangle">
            <!-- Fondo transparente -->
            <solid android:color="@android:color/transparent" />
            <!-- Borde del botón -->
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <!-- Esquinas redondeadas -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
