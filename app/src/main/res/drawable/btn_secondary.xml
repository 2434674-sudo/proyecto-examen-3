<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" />
            <stroke android:width="2dp" android:color="#E0E0E0" />
            <corners android:radius="14dp" />
            <padding
                android:left="8dp"
                android:top="10dp"
                android:right="8dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp" android:color="#DDDDDD" />
            <corners android:radius="14dp" />
            <padding
                android:left="8dp"
                android:top="10dp"
                android:right="8dp"
                android:bottom="10dp" />
            <shadow
                android:color="#33000000"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="150dp" />
        </shape>
    </item>

</selector>
