<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".WelcomeActivity">

    <!-- Contenedor central -->
    <LinearLayout
        android:id="@+id/cardWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:background="@drawable/bg_card_transparent"
        android:elevation="8dp"
        android:layout_margin="24dp">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgWelcome"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_welcome"
            android:layout_marginBottom="24dp"
            android:contentDescription="Imagen de bienvenida"
            android:layout_gravity="center" />

        <!-- Texto de bienvenida -->
        <TextView
            android:id="@+id/txtLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Listo para iniciar?"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_primary"
            android:fontFamily="sans-serif-medium"
            android:text="Iniciar sesión"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtGoRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</RelativeLayout>
